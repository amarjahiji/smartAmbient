# SmartAmbient Raspberry Pi Configuration

# Cloud Backend Configuration
CLOUD_API_URL=http://YOUR_CLOUD_IP:8080
# This will be set after first registration
DEVICE_API_KEY=

# Device Information
DEVICE_NAME=SmartAmbient-Pi-Hub
DEVICE_MAC=  # Will be auto-detected if empty

# MQTT Broker Configuration (running locally on Pi)
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_TOPIC_PREFIX=smartambient

# HTTP Server Configuration (for receiving commands from clients)
HTTP_HOST=0.0.0.0
HTTP_PORT=5000

# ESP32 Configuration
ESP32_MQTT_TOPIC=smartambient/esp32/command
ESP32_RESPONSE_TOPIC=smartambient/esp32/response

# Logging
LOG_LEVEL=INFO
